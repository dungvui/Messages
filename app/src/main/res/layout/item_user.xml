<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">


    <TextView
        android:id="@+id/user1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user1_message_box"
        android:text="hi"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_marginEnd="35dp"
        />

    <TextView
        android:id="@+id/user2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user2_message_box"
        android:text="I commented on Figma, I want to add some fancy icons. Do you have any icon set?"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_marginStart="35dp"
        android:layout_alignParentEnd="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/user2_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user2_message_box"
        android:src="@drawable/ic_like"
        android:backgroundTint="#272A35"
        android:visibility="gone"
        android:layout_marginStart="35dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>